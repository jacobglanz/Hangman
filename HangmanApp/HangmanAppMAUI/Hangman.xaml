<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HangmanAppMAUI.Hangman"
             Title="Hangman">

    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="Auto" RowSpacing="15">
        <HorizontalStackLayout Grid.Row="0">
            <Button Text="Start" Style="{StaticResource Primary}"/>
            <Button Text="Hint" Style="{StaticResource Secondary}"/>
        </HorizontalStackLayout>

        <Label Text="x lives left" Grid.Row="1"/>

        <HorizontalStackLayout Grid.Row="2"  HeightRequest="44">
            <Frame Style="{StaticResource LetterSuccess}">
                <Label Text="K"/>
            </Frame>
            <Frame Style="{StaticResource LetterFail}">
                <Label Text="G"/>
            </Frame>
            <Frame Style="{StaticResource LetterInitial}">
                <Label Text=""/>
            </Frame>
            <Frame Style="{StaticResource LetterSuccess}">
                <Label Text="N"/>
            </Frame>
        </HorizontalStackLayout>

        <Label Text="Hint desc goes here" Grid.Row="3" Margin="5"/>

        <Grid ColumnDefinitions="*,*,*,*,*" RowDefinitions="*,*,*,*,*,*" Grid.Row="4">
            <Button Text="A" Grid.Column="0" Grid.Row="0"/>
            <Button Text="B" Grid.Column="1" Grid.Row="0"/>
            <Button Text="C" Grid.Column="2" Grid.Row="0"/>
            <Button Text="D" Grid.Column="3" Grid.Row="0"/>
            <Button Text="E" Grid.Column="4" Grid.Row="0"/>

            <Button Text="F" Grid.Column="0" Grid.Row="1"/>
            <Button Text="G" Grid.Column="1" Grid.Row="1" Style="{StaticResource Fail}"/>
            <Button Text="H" Grid.Column="2" Grid.Row="1"/>
            <Button Text="I" Grid.Column="3" Grid.Row="1"/>
            <Button Text="J" Grid.Column="4" Grid.Row="1"/>

            <Button Text="K" Grid.Column="0" Grid.Row="2" Style="{StaticResource Success}"/>
            <Button Text="L" Grid.Column="1" Grid.Row="2"/>
            <Button Text="M" Grid.Column="2" Grid.Row="2"/>
            <Button Text="N" Grid.Column="3" Grid.Row="2" Style="{StaticResource Success}"/>
            <Button Text="O" Grid.Column="4" Grid.Row="2"/>

            <Button Text="P" Grid.Column="0" Grid.Row="3"/>
            <Button Text="Q" Grid.Column="1" Grid.Row="3"/>
            <Button Text="R" Grid.Column="2" Grid.Row="3"/>
            <Button Text="S" Grid.Column="3" Grid.Row="3"/>
            <Button Text="T" Grid.Column="4" Grid.Row="3"/>

            <Button Text="U" Grid.Column="0" Grid.Row="4"/>
            <Button Text="V" Grid.Column="1" Grid.Row="4"/>
            <Button Text="W" Grid.Column="2" Grid.Row="4"/>
            <Button Text="X" Grid.Column="3" Grid.Row="4"/>
            <Button Text="Y" Grid.Column="4" Grid.Row="4"/>

            <Button Text="Z" Grid.Column="2" Grid.Row="5"/>
        </Grid>

    </Grid>
</ContentPage>